<UserControl x:Class="RadialMenu.Controls.AppearancePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RadialMenu.Controls">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0">
            <!-- Page Header -->
            <Border Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="8" 
                    Margin="0,0,0,24"
                    Effect="{StaticResource ElevationShadow1}">
                <StackPanel Margin="20,16">
                    <TextBlock Text="🎨 Appearance Settings" 
                               FontSize="24" 
                               FontWeight="Light" 
                               Foreground="White"
                               FontFamily="{StaticResource PrimaryFontFamily}"/>
                    <TextBlock Text="Customize the visual appearance of your RadialMenu" 
                               FontSize="14" 
                               Foreground="White" 
                               Opacity="0.9"
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Settings Grid -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- UI Scale Section -->
                <Border Grid.Row="0" 
                        Background="{StaticResource SurfaceBrush}" 
                        CornerRadius="8" 
                        Margin="0,0,0,16"
                        Effect="{StaticResource ElevationShadow1}">
                    <StackPanel Margin="20,16">
                        <TextBlock Text="User Interface Scale" 
                                   FontSize="18" 
                                   FontWeight="Medium" 
                                   Foreground="{StaticResource OnSurfaceBrush}"
                                   FontFamily="{StaticResource PrimaryFontFamily}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Adjust the overall size of the RadialMenu interface" 
                                   FontSize="12" 
                                   Foreground="{StaticResource OnSurfaceSecondaryBrush}"
                                   FontFamily="{StaticResource PrimaryFontFamily}"
                                   Margin="0,0,0,12"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Scale:" 
                                       VerticalAlignment="Center" 
                                       FontFamily="{StaticResource PrimaryFontFamily}"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource OnSurfaceBrush}"
                                       Margin="0,0,16,0"/>
                            <Slider Grid.Column="1"
                                    Width="300" 
                                    Minimum="0.5" 
                                    Maximum="2.0" 
                                    Value="{Binding Working.Appearance.UiScale, Mode=TwoWay}"
                                    Style="{StaticResource ModernSliderStyle}"
                                    VerticalAlignment="Center"/>
                            <Border Grid.Column="2" 
                                    Background="{StaticResource PrimaryTransparentBrush}"
                                    CornerRadius="4"
                                    Padding="8,4"
                                    Margin="16,0,0,0">
                                <TextBlock Text="{Binding Working.Appearance.UiScale, StringFormat=N2}" 
                                           FontFamily="{StaticResource PrimaryFontFamily}"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Radius Settings -->
                <Border Grid.Row="1" 
                        Background="{StaticResource SurfaceBrush}" 
                        CornerRadius="8" 
                        Margin="0,0,0,16"
                        Effect="{StaticResource ElevationShadow1}">
                    <StackPanel Margin="20,16">
                        <TextBlock Text="Menu Dimensions" 
                                   FontSize="18" 
                                   FontWeight="Medium" 
                                   Foreground="{StaticResource OnSurfaceBrush}"
                                   FontFamily="{StaticResource PrimaryFontFamily}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Configure the inner and outer radius of the menu" 
                                   FontSize="12" 
                                   Foreground="{StaticResource OnSurfaceSecondaryBrush}"
                                   FontFamily="{StaticResource PrimaryFontFamily}"
                                   Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Inner Radius -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Inner Radius" 
                                           FontFamily="{StaticResource PrimaryFontFamily}"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource OnSurfaceBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Working.Appearance.InnerRadius, Mode=TwoWay}" 
                                         Style="{StaticResource ModernTextBoxStyle}"/>
                            </StackPanel>
                            
                            <!-- Outer Radius -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Outer Radius" 
                                           FontFamily="{StaticResource PrimaryFontFamily}"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource OnSurfaceBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Working.Appearance.OuterRadius, Mode=TwoWay}" 
                                         Style="{StaticResource ModernTextBoxStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Theme Settings -->
                <Border Grid.Row="2" 
                        Background="{StaticResource SurfaceBrush}" 
                        CornerRadius="8" 
                        Margin="0,0,0,16"
                        Effect="{StaticResource ElevationShadow1}">
                    <StackPanel Margin="20,16">
                        <TextBlock Text="Theme Selection" 
                                   FontSize="18" 
                                   FontWeight="Medium" 
                                   Foreground="{StaticResource OnSurfaceBrush}"
                                   FontFamily="{StaticResource PrimaryFontFamily}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Choose your preferred color scheme" 
                                   FontSize="12" 
                                   Foreground="{StaticResource OnSurfaceSecondaryBrush}"
                                   FontFamily="{StaticResource PrimaryFontFamily}"
                                   Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Theme:" 
                                       VerticalAlignment="Center" 
                                       FontFamily="{StaticResource PrimaryFontFamily}"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource OnSurfaceBrush}"
                                       Margin="0,0,16,0"/>
                            <ComboBox Width="200" 
                                      SelectedValue="{Binding Working.Appearance.Theme, Mode=TwoWay}"
                                      Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBoxItem Content="🌙 Dark Theme"/>
                                <ComboBoxItem Content="☀️ Light Theme"/>
                                <ComboBoxItem Content="🖥️ System Default"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Particle Settings -->
                <Border Grid.Row="3" 
                        Background="{StaticResource SurfaceBrush}" 
                        CornerRadius="8" 
                        Margin="0,0,0,16"
                        Effect="{StaticResource ElevationShadow1}">
                    <StackPanel Margin="20,16">
                        <TextBlock Text="Particle Effects" 
                                   FontSize="18" 
                                   FontWeight="Medium" 
                                   Foreground="{StaticResource OnSurfaceBrush}"
                                   FontFamily="{StaticResource PrimaryFontFamily}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Control visual particle effects in the menu" 
                                   FontSize="12" 
                                   Foreground="{StaticResource OnSurfaceSecondaryBrush}"
                                   FontFamily="{StaticResource PrimaryFontFamily}"
                                   Margin="0,0,0,16"/>
                        
                        <CheckBox Content="Enable Particle Effects" 
                                  IsChecked="{Binding Working.Appearance.ParticlesEnabled, Mode=TwoWay}" 
                                  FontFamily="{StaticResource PrimaryFontFamily}"
                                  FontWeight="Medium"
                                  Foreground="{StaticResource OnSurfaceBrush}"
                                  Style="{StaticResource ModernCheckBoxStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Preview Section -->
                <Border Grid.Row="4" 
                        Background="{StaticResource AccentTransparentBrush}" 
                        CornerRadius="8" 
                        Margin="0,0,0,0"
                        Effect="{StaticResource ElevationShadow1}">
                    <StackPanel Margin="20,16">
                        <TextBlock Text="✨ Live Preview" 
                                   FontSize="18" 
                                   FontWeight="Medium" 
                                   Foreground="{StaticResource OnSurfaceBrush}"
                                   FontFamily="{StaticResource PrimaryFontFamily}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Changes are applied immediately. Use Win+F12 to test your RadialMenu." 
                                   FontSize="12" 
                                   Foreground="{StaticResource OnSurfaceSecondaryBrush}"
                                   FontFamily="{StaticResource PrimaryFontFamily}"
                                   Margin="0,0,0,8"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
