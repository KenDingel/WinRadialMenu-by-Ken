<UserControl x:Class="RadialMenu.Controls.MenuItemPropertiesNew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:RadialMenu.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:HexColorToBrushConverter x:Key="HexColorToBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0">
            <!-- Header -->
            <Border Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="8" 
                    Margin="0,0,0,16"
                    Effect="{StaticResource ElevationShadow1}">
                <StackPanel Margin="16,12">
                    <TextBlock Text="📝 Menu Item Properties" 
                               FontSize="18" 
                               FontWeight="Medium" 
                               Foreground="White"
                               FontFamily="{StaticResource PrimaryFontFamily}"/>
                    <TextBlock Text="Configure the selected menu item" 
                               FontSize="12" 
                               Foreground="White" 
                               Opacity="0.9"
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <!-- Label Section -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Margin="0,0,0,16"
                    Effect="{StaticResource ElevationShadow1}">
                <StackPanel Margin="16">
                    <TextBlock Text="Display Label" 
                               FontSize="16" 
                               FontWeight="Medium" 
                               Foreground="{StaticResource OnSurfaceBrush}"
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding SelectedMenuItem.Label, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- Icon Section -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Margin="0,0,0,16"
                    Effect="{StaticResource ElevationShadow1}">
                <StackPanel Margin="16">
                    <TextBlock Text="Icon Selection" 
                               FontSize="16" 
                               FontWeight="Medium" 
                               Foreground="{StaticResource OnSurfaceBrush}"
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Choose an icon for your menu item" 
                               FontSize="12" 
                               Foreground="{StaticResource OnSurfaceSecondaryBrush}"
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               Margin="0,0,0,12"/>
                    
                    <ScrollViewer MaxHeight="140" 
                                  VerticalScrollBarVisibility="Auto" 
                                  Background="{StaticResource BackgroundBrush}"
                                  Padding="8">
                        <WrapPanel Orientation="Horizontal">
                            <WrapPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Width" Value="44"/>
                                    <Setter Property="Height" Value="44"/>
                                    <Setter Property="Margin" Value="4"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource SurfaceDarkBrush}"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="ButtonBorder"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource PrimaryTransparentBrush}"/>
                                                        <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </WrapPanel.Resources>
                            
                            <!-- Common Icons -->
                            <Button Content="📄" Click="SelectIcon_Click" Tag="📄"/>
                            <Button Content="📁" Click="SelectIcon_Click" Tag="📁"/>
                            <Button Content="🖥️" Click="SelectIcon_Click" Tag="🖥️"/>
                            <Button Content="⚙️" Click="SelectIcon_Click" Tag="⚙️"/>
                            <Button Content="🚀" Click="SelectIcon_Click" Tag="🚀"/>
                            <Button Content="💻" Click="SelectIcon_Click" Tag="💻"/>
                            <Button Content="📊" Click="SelectIcon_Click" Tag="📊"/>
                            <Button Content="🎨" Click="SelectIcon_Click" Tag="🎨"/>
                            <Button Content="🔧" Click="SelectIcon_Click" Tag="🔧"/>
                            <Button Content="📝" Click="SelectIcon_Click" Tag="📝"/>
                            <Button Content="🌐" Click="SelectIcon_Click" Tag="🌐"/>
                            <Button Content="📱" Click="SelectIcon_Click" Tag="📱"/>
                            <Button Content="⭐" Click="SelectIcon_Click" Tag="⭐"/>
                            <Button Content="❤️" Click="SelectIcon_Click" Tag="❤️"/>
                            <Button Content="🔍" Click="SelectIcon_Click" Tag="🔍"/>
                            <Button Content="📈" Click="SelectIcon_Click" Tag="📈"/>
                            <Button Content="💡" Click="SelectIcon_Click" Tag="💡"/>
                            <Button Content="🎯" Click="SelectIcon_Click" Tag="🎯"/>
                            <Button Content="🔔" Click="SelectIcon_Click" Tag="🔔"/>
                            <Button Content="🌟" Click="SelectIcon_Click" Tag="🌟"/>
                        </WrapPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Color Section -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Margin="0,0,0,16"
                    Effect="{StaticResource ElevationShadow1}">
                <StackPanel Margin="16">
                    <TextBlock Text="Color Selection" 
                               FontSize="16" 
                               FontWeight="Medium" 
                               Foreground="{StaticResource OnSurfaceBrush}"
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Choose a custom color (leave empty for default)" 
                               FontSize="12" 
                               Foreground="{StaticResource OnSurfaceSecondaryBrush}"
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0"
                                 Text="{Binding SelectedMenuItem.Color, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 FontSize="14"
                                 Margin="0,0,12,0"/>
                        
                        <Border Grid.Column="1"
                                Width="40" 
                                Height="40" 
                                CornerRadius="6"
                                BorderThickness="2"
                                BorderBrush="{StaticResource SurfaceDarkBrush}"
                                Background="{Binding SelectedMenuItem.Color, Converter={StaticResource HexColorToBrushConverter}}"
                                Effect="{StaticResource ElevationShadow1}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Action Section -->
            <Border Background="{StaticResource SurfaceBrush}" 
                    CornerRadius="8" 
                    Margin="0,0,0,16"
                    Effect="{StaticResource ElevationShadow1}">
                <StackPanel Margin="16">
                    <TextBlock Text="Action Configuration" 
                               FontSize="16" 
                               FontWeight="Medium" 
                               Foreground="{StaticResource OnSurfaceBrush}"
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               Margin="0,0,0,8"/>
                    
                    <TextBlock Text="Action Type:" 
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               FontWeight="Medium"
                               Foreground="{StaticResource OnSurfaceBrush}"
                               Margin="0,0,0,6"/>
                    <ComboBox SelectedValue="{Binding SelectedMenuItem.Action, Mode=TwoWay}" 
                              Style="{StaticResource ModernComboBoxStyle}"
                              Margin="0,0,0,12">
                        <ComboBoxItem>file</ComboBoxItem>
                        <ComboBoxItem>folder</ComboBoxItem>
                        <ComboBoxItem>url</ComboBoxItem>
                        <ComboBoxItem>command</ComboBoxItem>
                    </ComboBox>

                    <TextBlock Text="Path/Command:" 
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               FontWeight="Medium"
                               Foreground="{StaticResource OnSurfaceBrush}"
                               Margin="0,0,0,6"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0"
                                 Text="{Binding SelectedMenuItem.Path, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 FontSize="14"
                                 Margin="0,0,8,0"/>
                        
                        <Button Grid.Column="1"
                                Content="Browse..."
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="Browse_Click"
                                Visibility="{Binding Path=CanBrowse, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>