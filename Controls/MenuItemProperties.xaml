<UserControl x:Class="RadialMenu.Controls.MenuItemProperties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:RadialMenu.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:HexColorToBrushConverter x:Key="HexColorToBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Dark theme colors -->
        <Color x:Key="AccentColor">#FF2D7DD2</Color>
        <Color x:Key="BackgroundColor">#E6000000</Color>
        <Color x:Key="HoverColor">#FF45A5FF</Color>
        <Color x:Key="TextColor">#FFFFFFFF</Color>
        
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>

        <!-- Dark theme styles -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextElement.Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="20" />
                                </Grid.ColumnDefinitions>
                                <ContentPresenter x:Name="ContentPresenter"
                                                Margin="{TemplateBinding Padding}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                Content="{TemplateBinding SelectionBoxItem}"
                                                ContentTemplate="{TemplateBinding ItemTemplate}" />
                                <ToggleButton x:Name="ToggleButton" 
                                            Grid.Column="1"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                            ClickMode="Press">
                                    <Path x:Name="Arrow"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="M 0 0 L 4 4 L 8 0 Z"
                                        Fill="{StaticResource TextBrush}" />
                                </ToggleButton>
                                <Popup x:Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Grid x:Name="DropDown"
                                          SnapsToDevicePixels="True"
                                          MinWidth="{TemplateBinding ActualWidth}"
                                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder"
                                                Background="{StaticResource BackgroundBrush}"
                                                BorderBrush="{StaticResource AccentBrush}"
                                                BorderThickness="1">
                                            <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource HoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource HoverBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource HoverBrush}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource HoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Padding" Value="3"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <TextBlock Text="Menu Item Properties" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <TextBlock Text="Label" Margin="0,5,0,2"/>
            <TextBox Text="{Binding SelectedMenuItem.Label, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                     Style="{StaticResource DarkTextBox}" />

            <TextBlock Text="Icon" Margin="0,10,0,2"/>
            <ScrollViewer MaxHeight="120" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                <WrapPanel Orientation="Horizontal">
                    <WrapPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Width" Value="40"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="Background" Value="#FFF0F0F0"/>
                            <Setter Property="BorderBrush" Value="Gray"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE0E0E0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </WrapPanel.Resources>
                    <ItemsControl ItemsSource="{Binding AvailableIcons}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Emoji}" 
                                        Command="{Binding DataContext.SelectIconCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="{Binding Description}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </WrapPanel>
            </ScrollViewer>

            <TextBlock Text="Color" Margin="0,10,0,2"/>
            <ComboBox x:Name="ColorComboBox" SelectedItem="{Binding SelectedColor, Mode=TwoWay}" 
                      ItemsSource="{Binding AvailableColors}"
                      Style="{StaticResource DarkComboBox}"
                      ItemContainerStyle="{StaticResource DarkComboBoxItem}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="16" Height="16" 
                                       Fill="{Binding HexValue, Converter={StaticResource HexColorToBrushConverter}}" 
                                       Stroke="Gray" StrokeThickness="1" 
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Action Type" Margin="0,10,0,2"/>
            <ComboBox x:Name="ActionTypeComboBox" SelectedValue="{Binding SelectedMenuItem.Action, Mode=TwoWay}" 
                      ItemsSource="{Binding ActionTypes}" 
                      Style="{StaticResource DarkComboBox}"
                      ItemContainerStyle="{StaticResource DarkComboBoxItem}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="{StaticResource TextBrush}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Path/Command" Margin="0,10,0,2"/>
            <TextBox Text="{Binding SelectedMenuItem.Path, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                     Style="{StaticResource DarkTextBox}" />

            <TextBlock Text="Hotkey Override" Margin="0,10,0,2"/>
            <TextBox Text="(not implemented)" IsEnabled="False" 
                     Style="{StaticResource DarkTextBox}" />

            <TextBlock Text="ID" Margin="0,10,0,2"/>
            <TextBox Text="{Binding SelectedMenuItem.Id, Mode=OneWay}" IsReadOnly="True" 
                     Style="{StaticResource DarkTextBox}" />

            <!-- Bulk Operations Section -->
            <Border BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" Margin="0,20,0,10" Padding="8">
                <StackPanel>
                    <TextBlock Text="Bulk Operations" FontWeight="Bold" Margin="0,0,0,8"/>
                    
                    <TextBlock Text="{Binding SelectedMenuItems.Count, StringFormat='Selected Items: {0}'}" 
                               Margin="0,0,0,8" Foreground="LightGray"/>
                    
                    <TextBlock Text="Change Color for All Selected Items:" Margin="0,0,0,5"/>
                        
                    <ComboBox SelectedItem="{Binding BulkColor, Mode=TwoWay}" 
                              ItemsSource="{Binding AvailableColors}" 
                              Style="{StaticResource DarkComboBox}"
                              ItemContainerStyle="{StaticResource DarkComboBoxItem}"
                              Margin="0,0,0,8">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" 
                                               Fill="{Binding HexValue, Converter={StaticResource HexColorToBrushConverter}}" 
                                               Stroke="Gray" StrokeThickness="1" 
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Foreground="{StaticResource TextBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                        
                    <Button Content="Apply Color to Selected Items" 
                            Command="{Binding BulkChangeColorCommand}" 
                            Margin="0,0,0,5"/>
                    
                    <StackPanel Visibility="{Binding HasMultipleSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasMultipleSelected}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Select multiple items using checkboxes in the tree above." 
                                   Foreground="LightGray" FontStyle="Italic" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Button Content="Test Action" Margin="0,10,0,0" Command="{Binding TestActionCommand}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>