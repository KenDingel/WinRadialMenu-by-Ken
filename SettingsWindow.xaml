<Window x:Class="RadialMenu.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RadialMenu.ViewModels"
        xmlns:local="clr-namespace:RadialMenu"
        Title="RadialMenu Settings" Height="650" Width="950"
        Background="{StaticResource BackgroundBrush}"
        FontFamily="{StaticResource PrimaryFontFamily}"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2"
                   Text="RadialMenu Settings" 
                   FontSize="28" 
                   FontWeight="Light" 
                   Foreground="{StaticResource OnSurfaceBrush}"
                   Margin="0,0,0,20"/>

        <!-- Modern Navigation Sidebar -->
        <Border Grid.Column="0" Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="12"
                Effect="{StaticResource ElevationShadow2}"
                Margin="0,0,20,0">
            <StackPanel Margin="8">
                <TextBlock Text="Categories" 
                           FontSize="16" 
                           FontWeight="Medium" 
                           Foreground="{StaticResource OnSurfaceSecondaryBrush}"
                           Margin="12,16,12,8"/>
                <ListBox x:Name="NavList" 
                         SelectedIndex="0" 
                         Style="{StaticResource ModernListBoxStyle}"
                         ItemContainerStyle="{StaticResource ModernListBoxItemStyle}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="General"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⌨️" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Hotkeys"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎨" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Appearance"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📋" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Menu Builder"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔧" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Advanced"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Modern Content Area -->
        <Border Grid.Column="1" Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="12"
                Effect="{StaticResource ElevationShadow2}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Content Host -->
                <ContentControl Grid.Row="0" x:Name="ContentHost" />

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Margin="0,20,0,0">
                    <Button Content="Save Changes" 
                            Width="120" 
                            Margin="0,0,12,0" 
                            Click="Save_Click" 
                            Style="{StaticResource ModernFlatButtonStyle}"/>
                    <Button Content="Cancel" 
                            Width="100" 
                            Click="Cancel_Click" 
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
